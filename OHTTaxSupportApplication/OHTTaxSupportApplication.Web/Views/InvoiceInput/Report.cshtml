
@{
    ViewBag.Title = "Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-7">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="panel-title">
                    <span>Select date created</span>
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="input-group">
                            <span class="input-group-addon">
                                From date:
                            </span>
                            <input type="date" id="txtFromDate" name="txtFromDate" class="form-control" aria-label="...">
                        </div>
                    </div>
                    <div class='hidden-lg hidden-md hidden-sm'><div style='clear:both;width:100%;height:10px;'></div></div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="input-group">
                            <span class="input-group-addon" style="padding-right:30px;">
                                To date:
                            </span>
                            <input type="date" id="txtToDate" name="txtToDate" class="form-control" aria-label="...">
                        </div>
                    </div>
                    <div class=''><div style='clear:both;width:100%;height:10px;'></div></div>
                    <div class="col-lg-9 col-md-9 col-sm-9 col-xs-8">
                        <button type="button" id="btnSearch" name="btnSearch" class="btn btn-warning btn-sm">Search</button>
                        <button type="button" id="btnReset" name="btnReset" class="btn btn-default btn-sm">Reset</button>

                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-4 text-right">
                        <button type="button" id="btnPrint" name="btnPrint" class="btn btn-primary btn-sm pull-right" onClick="window.print();return false">Print</button>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <br />
                <div class="table-reponsive" style="overflow:auto">
                    <table class="table table-bordered">
                        <tbody id="report-content"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class='hidden-lg hidden-md hidden-sm'><div style='clear:both;width:100%;height:15px;'></div></div>
    <div class="col-sm-5">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">
                    <span>Chart generate</span>
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="chart-content" id="myChart">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/app/reports.js"></script>
    <script src="~/Scripts/app/loader.js"></script>
}